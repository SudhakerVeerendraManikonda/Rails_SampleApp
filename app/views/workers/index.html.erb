<h3>Workers List</h3>
<div id = "error_display"><%= notice %></div>
<%= link_to 'New Worker', new_worker_path %>

<br/> <br/>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
	  <th>Employee ID </th>
      <th>First Name</th>
      <th>Last Name</th>      
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
	    <td><%= link_to "#{worker.id}" , worker %></td>
        <td><%= worker.first_name %></td>
        <td><%= worker.last_name %></td>        
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Delete', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




