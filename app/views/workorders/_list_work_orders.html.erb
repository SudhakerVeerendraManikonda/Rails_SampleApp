<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Work details</th>
      <th>Worker</th>
      <th>Status</th>
      <th>Date of creation</th>
      <th>Last updated at</th> 
	  <th>Assign </th>
      <th> Edit</th>
      <th> Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @workorders.each do |workorder| %>
      <tr>
        <td><%= workorder.work_details %></td>
        <td><%= link_to "#{workorder.worker.first_name + " " + workorder.worker.last_name}" , workorder %></td>
        <td><%= workorder.status.status_description %></td>
        <td><%= workorder.date_of_creation.to_date  %></td>
        <td><%= workorder.last_updated_at.to_date  %></td> 
		<td><% if (workorder.status_id != 4) %><%= link_to 'Assign' , assign_path(workorder) %> <% else %> Completed <%end %></td>
        <td><%= link_to 'Edit', edit_workorder_path(workorder) %></td>
        <td><%= link_to 'Delete', workorder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
